        {
            <div class="form-group">
                @Html.LabelFor(model => model.paitent_medications, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.paitent_medications, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.paitent_medications, "", new { @class = "text-danger" })
